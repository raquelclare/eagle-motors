<div class="container">
	<div class="row">
		<div class="col-med-12" id="new-admin">
            <img src="./assets/images/eagle-motors-logo.png" id="logo-login">
			<h2>{{ title }}</h2>

			{{#if userErrors}}
				{{#each userErrors}}
					<div class="alert alert-danger">
						{{this.username.msg}}<br>
						{{this.password.msg}}<br>
						{{this.passwordMatch.msg}}
					</div>
				{{/each}}
			{{/if}}

			<form method="POST" action="/new-admin">
                    <!--    <div class="form-group">
                  <label for="email">Email address</label>
                  <input type="email" class="form-control" id="email" placeholder="email">
                </div> -->
                <div class="form-group">
                    {{!--<label for="username">Username</label>--}}
                    <input type="text" name="username" class="form-control" id="username" placeholder="create username">
                </div>
                <div class="form-group">
                    {{!--<label for="password">Password</label>--}}
                    <input type="password" name="password" class="form-control" id="password" placeholder="create password">
                </div>
                <div class="form-group">
                    {{!--<label for="passwordMatch">Re-enter password</label>--}}
                    <input type="password" name="passwordMatch" class="form-control" id="passwordMatch" placeholder="re-enter password">
                </div>
                <button type="submit" class="btn btn-secondary new-admin-btn">Submit</button>
            </form>
            <a class="back" href="/admin">back to admin page</a>
		</div>
	</div>
</div>